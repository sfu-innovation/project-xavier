	body
		div#header.banner
			
			div.row.clearfix.show-for-small
				script(type='text/javascript')
					function show_slider_box(id){
						$(id).slideToggle('fast');
					}
				div.slider_box#menu_box
					ul
						li
							a.all_btn(href="/") All Resources
						li
							a.contruibutions_btn(href="/mine") Your Contributions
						li
							a.starred_btn(href="/starred") Starred
						li
							a.instructor_btn(href="/instructor") Instructor Posts
				div.slider_box#courses_box
					ul
						each item in courses
							li.courses
								a(href="../course/#{item.subject+'-'+item.number+'-'+item.section}") #{item.subject+' '+item.number}
								
				div.slider_box#mobile_share_box
					form(name="share_article", action="/",enctype="multipart/form-data", method="post", class="custom")
						input.article_url(name="article_url",type="text",placeholder="http://")
						input.article_comment(name="article_comment", type="text", placeholder="Type in a comment")

						div#mobile_sumbitrow
							div.selectcourse
								select(class="customDropdown", name="article_course", value="select a course")
									each item in courses
										option(value=item.uuid) #{item.subject+item.number}
							div.submit
								input(type="submit", value="add", class="small button")

				div.mobile-four.columns
					ul#sliderMenu
						li#slide_menu 
							a(onClick="show_slider_box('#menu_box')") MENU
						li#slide_courses 
							a(onClick="show_slider_box('#courses_box')") COURSES
						li#slide_share 
							a(onClick="show_slider_box('#mobile_share_box')") SHARE
					

			div.row.clearfix.show-for-small
				div.mobile-two.columns#mobile_logo_box
					a(href="/")
						img.logo#small_logo(href="/", src="/images/engage/sfu_logo_white_small.png")
				div.mobile-two.columns#user_options_mobile
					ul#user_options_list
						li#notification_mobile.mobile_view
							div(onClick="dropdownToggle('#mobile_notif')")
